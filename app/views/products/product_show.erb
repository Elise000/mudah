<div class="container">

	<div class="row">
		<div class = "col-md-6">
			<ul class="list-inline">
				<li><h1>Item: <%= @product.description%></h1></li>
					<li>Price: <%= @product.price %></li>
						<li><p>Posted by: <a href= "/users/<%=@product.id%>/products"><%=@product.user.name%></a></p></li>
			</ul>
		</div>	
	</div>	


		<div>
			<% if @user != current_user %>
    	<form id="add favourite" action="/products/<%=@product.id%>/add_favourite", method="post">
    		<input type="submit" value="Add To Favourite">
			</form>		
			<% end %>					
		</div>
	
	<h4> Favourite by: </h4>
	<% @favourites.each do |x| %>
	<a href= "/users/<%=x.user.id%>/products"><%= x.user.name %>
	<% end %>

</div>

